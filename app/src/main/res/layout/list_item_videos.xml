<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_movie_videos_list_item"
    style="@style/MovieDetailListItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/movie_detail_video_play_image"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_play_circle_outline_black_24dp" />

    <TextView
        android:id="@+id/detail_movie_list_video_name"
        style="@style/MovieDetailListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>